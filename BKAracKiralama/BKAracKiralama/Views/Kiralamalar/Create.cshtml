@model BKAracKiralama.Models.Kiralama

@{
    ViewData["Title"] = "Ekle";
}

<h1>Ekle</h1>

<h4>Kiralama</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AlışGünü" class="control-label"></label>
                <input asp-for="AlışGünü" class="form-control" />
                <span asp-validation-for="AlışGünü" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GeriTeslimGünü" class="control-label"></label>
                <input asp-for="GeriTeslimGünü" class="form-control" />
                <span asp-validation-for="GeriTeslimGünü" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MüsteriID" class="control-label"></label>
                <select asp-for="MüsteriID" class ="form-control" asp-items="ViewBag.MüsteriID"></select>
            </div>
            <div class="form-group">
                <label asp-for="AracID" class="control-label"></label>
                <select asp-for="AracID" class ="form-control" asp-items="ViewBag.AracID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Listeye Dön</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
